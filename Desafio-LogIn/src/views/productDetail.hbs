<main>
  <div class="product__detail__container">
    <div class="product__detail__info">
      <h3>{{products.title}}</h3>
      <p>{{products.description}}</p>
      <h3>${{products.price}}</h3>
      <button class="product__detail__button" id="addProduct__btn" value={{products._id}} >Agregar al carrito</button>
    </div>
    <div  class="product__detail__image">
      <img src={{products.thumbnail}} alt="product__image" />
    </div>
  </div>
</main>
<script src="/js/products.js"></script>